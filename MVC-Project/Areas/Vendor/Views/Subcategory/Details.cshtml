@model Subcategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Vendor/Views/Shared/_VendorLayout.cshtml";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubCategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategoryName)
        </dd>
    </dl>
</div>
<div>
</div>


<div class="card">
    <div class="card-header">
        <h3 class="card-title font-weight-bold">@Model.SubCategoryName Products</h3>

        <div class="card-tools">
            <ul class="pagination pagination-sm float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">ID</th>
                    <th>Product Name</th>
                    <th>Actions</th>
                    <th style="width: 40px"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>
                                <div class="d-inline-flex">
                                    <a href="/Vendor/SubCategory/Details/@product.ProductId" class="mr-2"><button type="button" class="btn btn-block btn-info">View</button></a>
                                    <a href="/Vendor/SubCategory/Edit/@product.ProductId" class="mr-2"><button type="button" class="btn btn-block btn-primary">Edit</button></a>
                                    <a href="/Vendor/SubCategory/Delete/@product.ProductId"><button type="button" class="btn btn-block btn-danger">Delete</button></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No Products in <strong>@Model.SubCategoryName</strong></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>