@using MVC_Project.Helpers;
@using MVC_Project.Models.Identity;
@{
    ViewData["Title"] = "Home Page";
    AppDBContext DB = new();
    List<Subcategory> Subcategories = DB.Subcategories.Include(S => S.Products).ToList();
}
@foreach(Subcategory sub in Subcategories) {
    int counter = 1; 
    if(sub.Products.Count>0)
    {
        <section class="product-area li-laptop-product pt-60 pb-45 pt-sm-50 pt-xs-60">
            <div class="container">
                <div class="row">
                    <!-- Begin Li's Section Area -->
                    <div class="col-lg-12">
                        <div class="li-section-title">
                            <h2>
                                <span>@sub.SubCategoryName</span>
                            </h2>
                        </div>
                        <div class="row">
                            <div class="product-active owl-carousel">
                                @foreach (Product product in sub.Products)
                                {
                                    Image img = DB.Images.FirstOrDefault(I => I.ProductId == product.ProductId);
                                    string imageDataURL = ImageHandler.GetImageURI(img);
                                    <div class="col-lg-12">
                                        <!-- single-product-wrap start -->
                                        <div class="single-product-wrap">
                                            <div class="product-image">
                                                <a href="/Product/Details/@product.ProductId">
                                                    <img src="@imageDataURL" alt="@img?.Title">
                                                </a>
                                                <span class="sticker">New</span>
                                            </div>
                                            <div class="product_desc">
                                                <div class="product_desc_info">
                                                    <div class="product-review">
                                                        <h5 class="manufacturer">
                                                            <a href="product-details.html">@DB.Brands.FirstOrDefault(B=>B.Id==product.BrandID).Name</a>
                                                        </h5>
                                                        <div class="rating-box">
                                                            <ul class="rating">
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                                <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <h4><a class="product_name" href="/Product/Details/@product.ProductId">@product.ProductName</a></h4>
                                                    <div class="price-box">
                                                        <span class="new-price new-price-2">@product.price EGP</span>
                                                        <span class="old-price">@product.price EGP</span>
                                                        <span class="discount-percentage">-7%</span>
                                                    </div>
                                                </div>
                                                <div class="add-actions">
                                                    <ul class="add-actions-link">
                                                        <li class="add-cart active add-to-cart" data-id="@product.ProductId"><a href="#">Add to cart</a></li>
                                                        <li><a class="links-details" href="single-product.html"><i class="fa fa-heart-o"></i></a></li>
                                                        <li><a class="quick-view" data-toggle="modal" data-target="#exampleModalCenter" href="#"><i class="fa fa-eye"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- single-product-wrap end -->

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Li's Section Area End Here -->
                </div>
            </div>
        </section>
    }
    counter++;
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            // Document.ready -> link up remove event handler
            $(".add-to-cart").click(function () {
                // Get the id from the link
                var recoredToAdd = $(this).attr("data-id");
                if (recoredToAdd != '') {
                    // Perform the ajax post
                    $.post("/ShoppingCart/AddToCart/"+recoredToAdd,
                        function (data) {
                            debugger;
                            $('#cartItemCount').text(data.cartCount);
                            $("#MiniCartTotalPrice").text(data.cartTotalPrice)
                            $('#MiniCartTotalPrice2').text(data.cartTotalPrice);

                            document.getElementsByClassName("minicart-product-list")[0].innerHTML += `
                                            <li id="newAdded${data.productId}" data-id="${data.productId}">
                                        <a href="/Product/Details/${data.productId}" class="minicart-product-image">
                                            <img src="${data.imageURI}" alt="cart products">
                                        </a>
                                        <div class="minicart-product-details">
                                                            <h6><a href="/Product/Details/${data.productId}">${data.productName}</a></h6>
                                                                            <span>${data.priceAfterDiscount} x ${data.quantity}</span>
                                        </div>
                                        <button class="close removeCartItem" data-id="${data.productId}">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </li>
                            `
                            //$('#cart-status').text('Cart (' + data.CartCount + ')');
                        });
                }
            });
        });
    </script>
